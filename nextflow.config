// below process declarations are biomix specific
process {
  withLabel: 'gpu' {
      executor = 'slurm'
      queue = 'gpu2'
      clusterOptions = '--gres=gpu:1 --partition=gpu2 --account=gpu2 --qos=gpu'
  }
}

process{
  withLabel: 'standard' {
    executor = 'slurm'
    queue = 'batch'
    cpus = 20
    memory = '80 GB'
    clusterOptions = '--partition=batch'
    time = '7d'
  }
}

